doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Logins
    link(rel="stylesheet" href="/bower_components/pure/pure-min.css" charset="utf-8")
  body
    header.pure-g
      .pure-u-1-1
        .pure-menu.pure-menu-horizontal.pure-menu-fixed
          ul.pure-menu-list
            li.pure-menu-item.pure-menu-selected
              a.pure-menu-link(href="#") Home
            li.pure-menu-item
              a.pure-menu-link(href="#") Tour 
            li.pure-menu-item
              a.pure-menu-link(href="#") Sign Up           
    content.pure-g      
      .pure-u-1-3
      .pure-u-1-3
        form.pure-form.pure-form-stacked(action='/users/login' method='post')
          fieldset
            legend Login
              label Usuario
              input(type='text' name='username' placeholder='usuario')
              label Senha
              input(type='password' name='password' placeholder='senha')
              input.pure-button.pure-button-primary(type='submit' value='Log In')
      .pure-u-1-3
