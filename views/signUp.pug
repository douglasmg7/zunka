doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title #{title}
    link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css" charset="utf-8")
  body
    nav.navbar.navbar-inverse
      //- .container-fluid
      .container
        .navbar-header
          a.navbar-brand(href='/') ZUNKA
    .container
      .row
        .col-md-4
        .col-md-4
          .panel.panel-default
            .panel-body
              h1.text-left Cadastro
              //- .alert.alert-danger(role='alert') 
                p.text-center Usuario nao existe.
              form(action='/users/signup' method='post')
                .form-group
                  //- label Usuario
                  input.form-control(type='text' name='username' placeholder='usuario')
                .form-group
                  //- label Senha
                  input.form-control(type='password' name='password' placeholder='senha')
                input.btn.btn-primary.btn-block(type='submit' value='Cadastrar')
        .col-md-4
    script(src="/bower_components/jquery/dist/jquery.min.js")
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
