extends ../layout/layout_vue_n

block title
  title Zunka - Alteração de CPF

block append css
  link(rel="stylesheet" href="/css/user/editCpf.css" charset="utf-8")

block content 
  section.shadow
    h2.title Altere Seu CPF
    //- Warn message.
    p.warn-message(v-show='this.warnMessage !== ""') {{ warnMessage }}  
    label(for='cpf') CPF
    input(type='text' name='cpf' id='cpf' v-model='cpf')
    input.btn-primary(type='button' value='Salvar Alterações' @click='save()') 

append internal_scripts
  script.
    let cpf = !{JSON.stringify(cpf)};

append external_scripts
  script(src='/js/user/editCpf.js')  
