extends ../layout/layout

block title
    title Zunka - Alteração do CNPJ

block append internal_style
    style.
        section .invalid {
            color: var(--red);
            margin-top: 0;
        }

block content 
    section
        form(method='post')
            input(type='hidden' name='_csrf' value=csrfToken)

            //- Title.
            h2.mt0 Alteração do CNPJ

            //- CNPJ.
            label(for='cnpj') CNPJ
            input(type='text' name='cnpj' id='cnpj' value=cnpj)
            label.invalid= invalid.cnpj

            //- Save.
            input.btn-primary(type='submit' value='Salvar Alterações') 
