doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Alterar o e-mail
    link(rel="stylesheet" href="/css/user/editEmail.css" charset="utf-8")
  body
    header
      nav
        include ../main-nav.pug
    main#app(v-cloak)
      .breadlink
        a(href='/user/account') Sua conta
        a &nbsp> Altere seu e-mail
      .edit-email
        h2.text-left Altere Seu E-mail
        //- Warn message.
        p.warn-message {{ warnMessage }}   
        label E-mail antigo
        p {{ email }}
        //- New email.
        label(for='email') Novo e-mail
        input(type='text' name='email' id='email')
        //- New email confirmation.
        label(for='emailConfirm') Entre o e-mail novamente
        input(type='text' name='emailConfirm' id='emailConfirm')      
        //- Password.
        label(for='password') Senha
        input(type='password' name='password' id='password')        
        input(type='button' value='Salvar Alterações' @click='save()')               
  script.
    // Make available for vue.
    let csrfToken = !{JSON.stringify(csrfToken)};
    let email = !{JSON.stringify(email)};
  include ../components/axios.js.pug
  include ../components/vue.js.pug
  script(src='/js/user/editEmail.js')  