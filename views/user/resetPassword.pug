extends ../layout/layout_vue

block title
  title Zunka - Redefinir senha

block css
  link(rel="stylesheet" href="/css/user/resetPassword.css" charset="utf-8")

block content 
  .panel
    h2 Redefinir senha 
    label(for='newPassword') Nova senha          
    input(id='newPassword' type='password' v-model='password')
    label(for='newPassword') Confirme a nova senha          
    input(id='newPasswordConfirm' type='password' v-model='passwordConfirm')
    p.warn-message(v-show='this.warnMessage !== ""') {{warnMessage}}
    input.btn-primary(type='submit' value='Alterar senha' @click='resetPassword()')

block footer

append internal_scripts
  script.
    let resetPasswordToken = !{JSON.stringify(resetPasswordToken)};

append external_scripts
  script(src='/js/user/resetPassword.js')  