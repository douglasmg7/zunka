      ul
        li.back-main-menu Menu principal
        if !user.name
          li(onclick='window.location="/user/signin"') Entrar
        if user.name
          li(onclick='window.location="/user/orders"') Pedidos
          li(onclick='window.location="/user/address"') Endereços
