extends ../layout/layout_vue_n

block title
  title Zunka - Motoboy frete

block append css
  link(rel="stylesheet" href="/css/admin/editMotoboyFreight.css" charset="utf-8")

block content 
  section.shadow
    //- title.
    h2.title {{ freight.id === 'new' ? "Novo frete": "Alterar frete" }}
    //- Warn message.
    p.warn-message {{ warnMessage }}    
    //- Region.
    //- City.
    label(for='city') Cidade 
    input(type='text' id='city' value=freight.city)
    //- Dead line.
    label(for='deadline') Prazo (dias)
    //- input(type='text' id='deadline' v-model='freight.deadline')
    input(type='text' id='deadline' value=freight.deadline)
    //- Price.
    label(for='Price') Pre√ßo (R$)
    //- input(type='text' id='price' v-model='freight.price')
    input(type='text' id='price' value=brCurrency(freight.price))
    input.btn-primary(type='button', :value='freight.id === "new" ? "Criar frete": "Salvar"' @click='save()')
    input.btn-danger(v-if='!(freight.id === "new")' type='button' value='Apagar' @click='remove()')
    input.btn-exit(type='button' onclick='window.location.href="/admin/motoboy-freights"' value='Sair') 

append internal_scripts
  script.
    let freight = !{JSON.stringify(freight)};

append external_scripts
  script(src='/js/admin/editMotoboyFreight.js?0001')
