nav.navbar.navbar-inverse.navbar-static-top
  //- .container-fluid
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar     
      // Home.
      a.navbar-brand(href='/') 
        svg.icon: use(xlink:href='/icon/sprite.svg#ic_home_white_24px') 
        | ZUNKA
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav.navbar-right
        // Username.
        if user.name
          li
            a(href='/users/account') 
              svg.icon: use(xlink:href='/icon/sprite.svg#ic_account_circle_white_24px') 
              | #{user.name}
        // Sign-in.
        if !user.name
          li
            a(href='/users/login') 
              svg.icon: use(xlink:href='/icon/sprite.svg#ic_account_circle_white_24px')
              | Entrar
        // Cart.
        li
          a(href='/cart')
            //- img.cart(src='/icon/ic_shopping_cart_white_24px.svg' alt='cart')
            svg.icon: use(xlink:href='/icon/sprite.svg#ic_shopping_cart_white_24px')
            | Carrinho
            | &nbsp
            span#total-qtd.badge= cart.totalQtd
        // Admin.
        if user.group == 'admin'
          li
            a(href='/admin/') 
              svg.icon: use(xlink:href='/icon/sprite.svg#ic_supervisor_account_white_24px')
              | Admin
        // Logout.
        if user.name
          li
            a(href='/users/logout')
              svg.icon: use(xlink:href='/icon/sprite.svg#ic_exit_to_app_white_24px')
              | Sair
      .navbar-form.navbar-right
        input.form-control(onkeypress='search(event)' placeholder='O que vocÃª procura?' type='text' size='40')
style.
  .icon {
    width: 1.5em;
    height: 1.5em;
    vertical-align: middle;
    margin-right: .5em;
  }  
script.
  function search(event){
    console.log('uiuiu');
    if (!event) event = window.event;
    let keyCode = event.keyCode || event.which;
    if (keyCode == '13'){
      window.location.href = `/?page=1&search=${event.target.value}`;
    }
  }