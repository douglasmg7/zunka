@import '../menu/reset_menu_footer'
#app
  display block
  width 100%
  overflow-x hidden
  > .info
    max-width max_width_info
    margin 0 auto
    color c_gray
    > .title
      padding 1em 0 0 0
      font-size 1.6em
      font-weight 400
      line-height 2
    > .content
      box-shadow: 3px 3px 3px 0 rgba(0,0,0,.1);
      border-radius 4px
      background-color #fff
      padding 1em
      margin 2px 5px 5px 2px 
      h4
        color c_black
        font-size 1.5em
        margin-top 1.5em
        margin-bottom .6em
        &:first-child
          margin-top 0em
      a
        text-decoration none
      p
        margin-bottom .7em
        line-height 1.5em