@import '../reset'
@import '../topMenu'
@import '../footer'
// @import 'pagination'
main
  background-color #f5f5f5
  padding-bottom 2em
  .container
    width 100%
    overflow-x hidden
    > .info
      max-width 800px
      margin 0 auto
      > .title
        padding 1em 0 0 0
        font-size 1.6em
        color #666
        font-weight 400
        line-height 2
      > .content
        box-shadow: 0 1px 1px 0 rgba(0,0,0,.1);
        border-radius 4px
        background-color #fff
        padding 1em
        a
          text-decoration none