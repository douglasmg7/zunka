@import '../menu/reset_menu_footer'
main
  background-color #f5f5f5
  padding-bottom 2em
  #app
    max-width $MAX_WIDTH
    overflow-x hidden
    margin 0 auto
    hr
      margin-top .5em
      margin-bottom .5em
    .title
      color green
      font-weight bold
      margin-top 2em
      margin-bottom .6em
    .loader
      display inline-block;
      width 2em
      height 2em
      position relative
      left -4em
      vertical-align middle
      border 4px solid #f3f3f3
      border-top 4px solid #3498db
      border-radius 50%
      animation spin 1s linear infinite
    @keyframes spin
      0%
        transform rotate(0deg)
      100%
        transform rotate(360deg)
    > .product
      // background-color red
      display flex
      flex-flow row wrap
      justify-content space-between
      margin 1em 1em
      > .image
        // background-color yellow
        margin 1em
        flex 1 1 40%
        > img
          display block
          margin 0 auto 2em auto
          max-height 300px
          max-width 300px
        > .thumbnail
          // background-color blue
          > img
            // margin .1em
            margin 1em
            max-height 80px
            max-width 80px
      > .info
        flex 1 1 50%
        padding 2em
        box-shadow: 5px 5px 30px -20px rgba(0,0,0,0.75);
        .product-title
          font-size 2em
          // font-weight bold
          color green
        .product-price
          margin-top .5em
          font-size 1.5em
        .product-detail
          padding-top 1em
          padding-left 1em
        button
          margin-top: 1em
        .estimate-ship
          margin-top: 2em;
          & > p 
            margin 0
            font-weight bold
          input
          button
            height 2em
            border 1px solid lightgray
            margin-bottom .5em
          input
            border-right 0
            border-radius 4px 0 0 4px
            padding-left 1em
            padding-right 1em
          button
            border-radius 0 4px 4px 0
          table
            margin-top 1em
            border-radius 4px
            background-color #F3F3F3
            th
              padding .5em 1em 0 1em
            td
              padding .5em 1em .5em 1em
          p.errMsg
            margin-top .5em
            color red      
    > .info
      > .infos
        display flex
        flex-flow row wrap
        margin-bottom 3em
        table
          width 95%
          border-spacing 0
          // margin-bottom 1em
          td
            padding 8px
            border-top 1px solid #ddd
            &:nth-child(1)
              background-color #eee
          tr:last-child
            td
              border-bottom 1px solid #ddd
        > .info-tech
        > .info-add
          flex 1 1 50%
