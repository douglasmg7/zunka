@import '../menu/reset_menu_footer'
main
  background-color #f5f5f5
  // padding-bottom 2em
  padding-bottom 1em
  #app
    width 100%
    overflow-x hidden
    > .cart
      border 1px solid #ddd
      background-color #f3f3f3
      display flex
      flex-flow row wrap
      margin 1em .5em .5em .5em
      span
        font-size 1.2em
      img
        max-width 6em
        max-height 4em
      .item, .sub-total, .buttons
        display flex
        flex-flow row nowrap
        span
          padding 0 .5em 0 .5em
      .item
        align-items center
        span
          color green
          font-weight bold
      .sub-total
        flex 1 1 auto
        justify-content center
        align-items center
        padding 1em
        & > span:nth-child(2)
          padding-left 0
          font-weight bold
          color green
      .buttons
        flex 1 1 auto
        justify-content center
        padding 1em
        button:nth-child(1)
          margin-right 1em
    > .banners
      height 300px
      width $MAX_WIDTH
      margin 0 auto
      position relative
      overflow hidden
      z-index 100
      box-shadow: 0px 0px 15px 1px rgba(0,0,0,0.2);
      border-radius 0 0 4px 4px
      img
        display block
      .banner-menu
        position absolute
        width 100%
        bottom 0
        left 0
        box-sizing: border-box
        padding 1em
        color #fff
        .arrow
        .dots
          width 33.33%
          float left
        .arrow
          font-size 1.5em
          &:hover
            color #999
            cursor pointer
        & .right
          text-align right
        .dots
          position relative
          top .7em
          display inline-block
          text-align center
          .dot
            display inline-block
            margin 0 1em
            height 12px
            width 12px
            background-color rgba(0, 0, 0, 0)
            border-radius 50%
            border solid #fff 1px
            &:hover
              background-color #fff
              cursor pointer
            &.selected
              background-color #fff
    > .best-selling-products      
    > .new-products  
      width $MAX_WIDTH
      margin 0 auto
      // border 1px black solid
      > .title
        padding 1em 0 0 0
        font-size 1.6em
        color #666
        font-weight 400
        line-height 2
      > .products
        display flex
        flex-flow row wrap
        // justify-content space-around
        justify-content space-between
        // justify-content center
        // background blue
        > .product
          // box-shadow: 8px 8px 30px -12px rgba(0,0,0,0.75);
          // box-shadow: 0 1px 1px 0 rgba(0,0,0,.1);
          box-shadow: 0 3px 3px 0 rgba(0,0,0,.1);
          border-radius 4px
          background-color #fff
          max-width 260px
          padding 1em
          > a
            text-decoration none
            > img
              max-width 100%
            > .title
              font-size 1em
              color green
              font-weight 400
              line-height 1.4
              display block
              margin-bottom .6em
            > .price
              font-size 1.3em
              color black
              font-weight 400
              line-height 1.1
              > sup
                font-size: 0.5em
                top: -0.6em
                padding-right: 0.3em
                padding-left: 0.2em

