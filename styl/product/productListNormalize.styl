:root {
    /* Colors */
    --black-darker: #333;
    --black-dark: #555;
    --black: #777;
    --white-lighter: #fff;
    --white-light: #f5f5f5;
    --white: #eee;
    --white-dark: #dbdbdb;
    --green-lighter: #23d160;
    --green-light: #22c65b;
    --green: #070;
    --green-dark: #050;
    --green-darker: #030;
    --gray: #666;
    /* Menu */
    --menu-width: 200;
}

body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-family: '-apple-system', 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', 'sans-serif';
    background-color: var(--white-light);
    overflow-x: hidden;
}
#header {
// Header bar.

    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 2.8em;
    padding-left: .5em;
    background-color: var(--black-darker);
}
// Search.
#header .search {
  flex-grow: 1;
  display: flex;
  align-items: center;
  height: 70%;
  padding-left: .5em;
  padding-right: .5em;
  margin: 0 1em 0 .5em;
  border-radius: 4px;
  background-color: var(--white-lighter);
}
#header .search input {
  flex-grow: 1;
  margin: 0;
  box-sizing: border-box;
  border: none;
  padding-left: .5em;
  height: 100%;
}
#header .search i {
  cursor: pointer;
}

// Brand name.
#header .brand {
  // margin-left: 1em;
  height: 70%;
  padding: 0 .5em;
  flex-shrink: 0;
}
#header .brand img {
  height: 100%;
}

// Cart.
#header a.cart {
  flex-shrink: 0;
}
#header a.cart .icon {
  width: 2.2em;
  height: 2.2em;
  position: relative;
  top: .2em;
}
#header a.cart #cart-qtd {
  position: relative;
  top: -1.15em;
  left: -1.65em;
  font-size: .8em;
  font-weight: bold;
  color: var(--green);
  margin-right: .5em;
}

// Burger.
#header .burger {
    cursor: pointer;
    display: inline-block;
    height: 100%;
    box-sizing: border-box;
}
#header .burger:hover {
    opacity: .7;
}
#header .burger-box {
    width: 46px;
    display: inline-block;
    position: relative;
}
#header .burger-inner {
    // display: block;
    // top: 40%;
    left: 10%;
    margin-top: 2px;
}
#header .burger-inner, .burger-inner::before, .burger-inner::after {
    width: 28px;
    height: 2px;
    background-color: var(--white-lighter);
    border-radius: 1px;
    position: absolute;
}
#header .burger-inner::before, .burger-inner::after {
    content: "";
    display: block;
}
#header .burger-inner::before {
    top: -10px;
}
#header .burger-inner::after {
    bottom: -10px;
}
#header .burger.active {
    /*margin-left: calc(var(--menu-width) * 1px);*/
}
#header .burger.active .burger-inner {
    transform: rotate(45deg);
}
#header .burger.active .burger-inner::before {
    top: 0;
    opacity: 0;
}
#header .burger.active .burger-inner::after {
    bottom: 0;
    transform: rotate(-90deg);
}

// Menu.
#menu {
    background-color: var(--black-darker);
}
#menu a {
    color: var(--white);
    font-size: 1.2em;
    cursor: pointer;
}

// Main.
main {
  max-width: 1200px;
  flex-grow: 1;
  margin: 0 auto;
  padding: 0 1em;
}

// Footer.
footer {
    padding: 1em;
    text-align: center;
    background-color: var(--black-darker);
}
footer a {
    margin: 1rem;
    color: var(--white);
    font-size: 1.2em;
    cursor: pointer;
    display: block;
}
footer a:hover {
    color: var(--white);
    opacity: .7;
}
section {
    margin: 2em auto;
}
.shadow {
    box-shadow: 3px 3px 3px 0 rgba(0,0,0,0.1);
    border-radius: 4px;
}
.products {
    display: grid;
    //- grid-template-columns: [first] 1fr 1fr 1fr 1fr;
}
.product {
    margin: .7rem;
    padding: .7rem;
    background-color: var(--white-lighter);
}
.product p {
    margin-bottom: .2em;
}
.section-title {
    margin: 0 0 0 1.4rem;
    font-size: 1.6em;
    font-weight: 400;
    letter-spacing: 0;
    color: var(--gray);
}

img {
    height: auto;
    width: 100%;
    display:block;
}
a {
    text-decoration: none;
}
a.button, a.button:hover {
    width: 100%;
    color: var(--white-lighter);
    background-color: var(--green-lighter);
    border-color: transparent;
}
a.button:hover {
    background-color: var(--green-light);
}
/* Mobile */
@media (min-width: 400px) {
    .products {
        grid-template-columns: 1fr;
    }
}

/* Tablet */
@media (min-width: 550px) {
    .products {
        grid-template-columns: 1fr 1fr;
    }
}
/* Small laptop */
@media (min-width: 750px) {
    .products {
        grid-template-columns: 1fr 1fr 1fr ;
    }
    footer a {
        display: block;
    }
}
/* Laptop */
@media (min-width: 1000px) {
    .products {
        grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;
    }
    footer a {
        display: inline-block;
    }
}


/* Screen under 48em. */
@media (max-width: 48em) {
    /* Animation. */
     #menu, .items {
        transition: all .2s ease-out;
    }

    /* Menu. */
    #menu {
        position: absolute;
        height: 100%;
        width: calc(var(--menu-width) * 1px);
        right: calc(var(--menu-width) * -1px);
        // right: 0;
        top: 2.5em;
        text-align: left;
        padding-top: .5em;

    }
    #menu.active {
        right: 0;
    }

    /* Menu item. */
    #menu .item {
        display: block;
        padding: .4em .5em .4em 1.4em;
    }
    #menu .item:hover {
        opacity: .7;
    }
    /* Sub-menu items. */
    #menu .items {
        position: absolute;
        top: 0;
        height: 100%;
        z-index: 1010;
        background-color: var(--black-darker);
        width: calc(var(--menu-width) * 1px);
        right: calc(var(--menu-width) * -1px);
    }
    #menu .items.active {
        right: 0;
    }
    /* Sub-menu back menu. */
    #menu .sub-menu .items a.item.back {
        background-color: var(--black-dark);
    }
    #menu .sub-menu .items a.item.back:hover {
        background-color: var(--black-dark);
    }
    /* Fotter. */
    #footer .item {
        display: block;
    }
}

/*  Screen above 48em. */
@media (min-width: 48em) {
    #header .burger {
        display: none;
    }
    #main {
        margin-top: 2em;
    }

    // Menu.
    #menu {
        padding-right: 5em;
        text-align: right;
    }
    /* Sub-menu. */
    #menu .sub-menu {
        margin: 0 0 0 3em;
        display: inline-block;
    }
    #menu .toggle-items {
        display: inline-block;
        margin-bottom: .3em;
        padding: 0 1em 0 1em;
    }
    #menu .toggle-items i.fa-chevron-up {
        position: relative;
        transform: rotate(180deg);
        top: .1em;
    }
    #menu .sub-menu .items,
    #menu .sub-menu .items .item.back {
        display: none;
    }
    /* Sub-menus. */
    #menu .items {
        position: absolute;
        top: 5.5em;
        margin-left: -2em;
        width: 12em;
        padding: .5em 1em;
        // padding .5em 0;
        /*width: calc(var(--menu-width) * 1px);*/
        color: var(--black-dark);
        background-color: var(--white-lighter);
        font-size: .9em;
        text-align: left;
        // box-shadow: 4px 6px 22px -8px rgba(0,0,0,0.81);
        border: solid 1px var(--white);
        border-radius: 4px;
    }
    //- Sub menu items.
    #menu .items a.item {
        color: var(--black-darker);
        padding: .1em 0;
    }
    #menu .items a.item:hover {
        color: var(--green);
    }
    /* Show sub-menu items. */
    #menu .sub-menu:hover .items {
        display: block;
    }
    #menu .sub-menu:hover .toggle-items{
        opacity: .7;
    }
    #menu .sub-menu .items .item {
        // padding-top: .5em;
        // padding-bottom: .5em;
        display: block;
    }
}
