// Layout.
.layout {
    margin: 0 auto;
    display: grid;
}
// Filter.
.filter {
    // margin: 0.3em .6em 0 0;
    // padding 0 2em .5em 2em;
    padding 0 .5em 1em .5em;
    // background-color: var(--white-lighter);
}
.filter h3 {
    color: var(--black-dark)
}
.filter .search-info p {
    color: var(--green);
    margin: 0 0 1em 0;
}
.filter .title {
    margin-top: 0;
}
.filter .checkbox {
    cursor: pointer;
    // margin-top: .8em;
}
.filter .checkbox input[type='checkbox'] {
    cursor: pointer;
    margin-right: .3em;
}
.filter .checkbox label {
    position: relative;
    top -.1em;
    display: inline-block;
    margin: 0;
    cursor: pointer;
    font-weight: 400;
    color: var(--black)
}
// Products.
.products {
    grid-area: product;
    display: grid;
}
// Product.
.product {
    // max-width: 200px;
    background-color: var(--white-lighter);
    padding: 1em;
    margin: .6em;
}
.product img {
    // max-width: 100%;
}
.product-title{
    margin-bottom: .6em;
    color: var(--green-dark);
}
.product-price {
    font-size: 1.2em;
    color: var(--black-darker);
}
.product-price sup{
    font-size: 0.7em;
    top: -0.31em;
    padding-right: 0.3em;
    padding-left: 0.2em;
}
@media (min-width: 0px) {
    .layout {
        grid-template-columns: auto;
        grid-template-rows: auto;
        grid-template-areas: "header" "product";
    }
    section {
        padding: 0;
    }
    .filter {
        grid-area: header;
    }
    .products {
        grid-template-columns: 1fr;
    }
    .product {
        margin: .7em 0 .7em 0;
    }
    .product-title {
        font-size: 1.5em;
        margin-left: .5em;
        margin-right: .5em;
        }
    .product-price {
        font-size: 1.8em;
        margin-left: .35em;
        margin-right: .35em;
        margin-top: .0em;
        }
}
@media (min-width: 500px) {
    .layout {
        grid-template-columns: auto auto;
        grid-template-areas: "header product";
    }
    section {
        padding: 0 0.5em;
    }
    .products {
        grid-template-columns: 1fr;
    }
    .product {
        margin: .6em;
    }
}
@media (min-width: 600px) {
    .products {
        grid-template-columns: 1fr 1fr;
    }
    .product-title {
        font-size: 1.2em;
        }
    .product-price {
        font-size: 1.4em;
        }
}
@media (min-width: 800px){
    .products {
        grid-template-columns: 1fr 1fr 1fr;
    }
    .product-title {
        font-size: 1em;
        }
    .product-price {
        font-size: 1.2em;
        }
}
@media (min-width: 1000px){
    .products {
        grid-template-columns: 1fr 1fr 1fr 1fr;
    }
}
@media (min-width: 1212px) {
    .products {
        grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    }
}
