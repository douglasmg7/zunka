@import '../menu/reset_menu_footer'
@import '../menu/pagination'
#app
  max-width max_width
  margin 0 auto
  margin-bottom 1em
  overflow-x hidden
  .panel
    width auto
    margin 0 1em
    background-color bgc_body
    border-radius 0
    box-shadow none
    .cart
      border 1px solid #ddd
      background-color #f3f3f3
      display flex
      flex-flow row wrap
      margin 1em .5em .5em .5em
      span
        font-size 1.2em
      img
        max-width 6em
        max-height 4em
      .item, .sub-total, .buttons
        display flex
        flex-flow row nowrap
        span
          padding 0 .5em 0 .5em
      .item
        align-items center
        span
          color green
          font-weight bold
      .sub-total
        flex 1 1 auto
        justify-content center
        align-items center
        padding 1em
        & > span:nth-child(2)
          padding-left 0
          font-weight bold
          color green
      .buttons
        flex 1 1 auto
        justify-content center
        padding 1em
        button:nth-child(1)
          margin-right 1em
    .title
      padding 0
      font-size 1.6em
      color c_gray
      font-weight 400
      line-height 2
    .all-products  
      margin 0 auto
      padding-right 6px
      display flex
      flex-flow row wrap
      > .left-bar
        flex 0 1 auto
        margin .6em 1em 0 0
        color c_gray
        .checkbox
          cursor pointer
          margin-top .8em
          input[type='checkbox']
            vertical-align bottom
            margin-right .4em
            cursor pointer
          label
            display inline-block
            margin 0
            cursor pointer
      > .products
        flex 1 1 300px
        // max-width 800px
        display flex
        flex-flow row wrap
        justify-content space-between
        margin-bottom: 2em
        > .product
          flex 1 1 244px
          box-shadow: 3px 3px 3px 0 rgba(0,0,0,.1);
          border-radius 4px
          background-color #fff
          // max-width 244px
          padding 1em
          margin .6em
          > a
            text-decoration none
            > img
              max-width 100%
            > .title
              font-size 1em
              color c_green
              font-weight 400
              line-height 1.4
              display block
              margin-bottom .6em
            > .price
              font-size 1.3em
              color black
              color text_color
              font-weight 400
              line-height 1.1
              > sup
                font-size: 0.5em
                top: -0.6em
                padding-right: 0.3em
                padding-left: 0.2em

