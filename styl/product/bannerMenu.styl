.banner-menu
  position absolute
  width 100%
  bottom 0
  left 0
  box-sizing: border-box
  padding 1em
  color #fff
  .arrow
  .dots
    width 33.33%
    float left
  .arrow
    font-size 1.5em
    &:hover
      color #999
      cursor pointer
  & .right
    text-align right
  .dots
    position relative
    top .7em
    display inline-block
    text-align center
    .dot
      display inline-block
      margin 0 1em
      height 12px
      width 12px
      background-color rgba(0, 0, 0, 0)
      border-radius 50%
      border solid #fff 1px
      &:hover
        background-color #fff
        cursor pointer
      &.selected
        background-color #fff