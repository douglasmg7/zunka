@import 'reset'
@import 'main-nav'
@import 'pagination'
.products
  display flex
  flex-flow row wrap
  // justify-content space-around
  justify-content space-evenly
  // background blue
.product
  border 1px solid #DDDDDD
  border-radius .3em
  margin 1em
  padding .3em
  flex 0 0 14em
  text-decoration none
  color black
  a
    text-decoration none
  .title
    font-size 1.2em
    color green
    font-weight 500
    line-height 1.1
  .price
    margin-top .5em
    font-size 1.4em
    color black
    font-weight 500
    line-height 1.1
    sup
      font-size: 0.5em
      top: -0.6em
      padding-right: 0.3em
      padding-left: 0.2em
