.modal-loading {
    position: fixed; /* Stay in place */
    z-index: 2;
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
}
.modal-loading .panel {
    margin: 40% auto;
    min-width: 100px;
    border-radius: 4px;
    background-color: var(--white-lighter);
    padding: 1em;
}
.modal-loading .panel h2 {
    margin-top: 0;
}
.loading {
  display: inline-block;
  overflow: hidden;
  height: 1.3em;
  margin-top: -0.3em;
  line-height: 1.5em;
  vertical-align: text-bottom;
}
.loading::after {
  display: inline-table;
  white-space: pre;
  text-align: left;
}
.loading::after {
  content: "\A.\A. .\A. . .";
  animation: spin 2s steps(4) infinite;
}
@keyframes spin  { to { transform: translateY( -6.0em); } }

