input
  box-sizing border-box
  width 100%
  height 2em
  border 1px solid lightgray
  // margin-bottom .5em
  padding-left .5em
  padding-right .5em
  border-radius 4px
  
btn-primary()
  input[type='submit'].btn-primary
  input[type='button'].btn-primary
    color c_btn_dark_green
    background-color bgc_btn_dark_green
    border-color bc_btn_dark_green
    &:hover
      background-color bgc_btn_dark_green_hover
      border-color bc_btn_dark_green_hover
      
btn-secondary()
  input[type='submit'].btn-secondary
  input[type='button'].btn-secondary
    color c_btn_light_green
    background-color bgc_btn_light_green
    border-color bc_btn_light_green
    &:hover
      background-color bgc_btn_light_green_hover
      border-color bc_btn_light_green_hover
      


