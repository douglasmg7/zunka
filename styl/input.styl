input
  box-sizing border-box
  width 100%
  height 2em
  border 1px solid lightgray
  margin-bottom 1em
  padding-left 1em
  padding-right 1em
  border-radius 4px
  
input-dark-blue()
  .dark-blue
    color c_btn_dark_blue
    background-color bgc_btn_dark_blue
    border-color bc_btn_dark_blue
    &:hover
      background-color bgc_btn_dark_blue_hover
      border-color bc_btn_dark_blue_hover
      
input-light-blue()
  .light-blue
    color c_btn_light_blue
    background-color bgc_btn_light_blue
    border-color bc_btn_light_blue
    &:hover
      background-color bgc_btn_light_blue_hover
      border-color bc_btn_light_blue_hover
      


