.top-nav
  display block
  padding .8em 0
  min-width 400px
  background #333
  font-size 1.1em
  a.brand 
    float left
    color #ccc
    text-decoration none
    margin .1em 2em .1em 1em
    cursor pointer
    &:hover
      color #fff
  a.cart
    float right
    margin 0 1em
    text-decoration none
    cursor pointer
    .icon
      width 2.2em
      height 2.2em   
      position relative
      top -.25em
    #cart-qtd
      position relative
      top -1.5em
      left -1.45em
      font-size .9em
      font-weight bold
      color green
  #menu
    float right
    transition transform 0.1s ease
    background #333
    padding-top .1em
    // border 1px yellow solid 
    & > li
      display inline-block
      color #ccc
      margin 0 1em
      cursor pointer
      // border 1px green solid 
      a
        color #ccc
        text-decoration none
      .icon
        // border 1px pink solid 
        width 1.2em
        height 1.2em   
        // position relative
        // top -3px
        vertical-align middle
    & > li.account
      ul
        display none
        position absolute
        top 40px
        background #333
        li 
          list-style none
    & > li.account:hover ul 
      display block
      background blue    
      // &:hover ul{display block}
      //   background blue
      // }
  .search
    // The trick used to be width 100% inside a block.
    display flex
    input:first-child
      height 2em
      min-width 60px
      border none
      border-radius 2px 0 0 2px
      padding-left .5em
    input:last-child
      height 2em
      width 2.2em
      margin-right 2em
      border none
      border-radius 0 2px 2px 0
      background-image url('/icon/ic_search_black_24px.svg')
      // background-image url('/icon/sprite.svg#ic_search_black_24px')
      // background-size 8px 8px;
      // background-position 0 0;
      background-repeat no-repeat
      background-color white
      background-size 1.8em 1.8em
      background-position 65% 50%  
    input:last-child:hover
      background-color lightgray
      cursor pointer
  #toggle-menu
    float right
    display none
    & > span
      display block
      width 28px
      height 2px
      margin 5px 1em 5px 1em
      // margin-bottom 5px
      // margin-top 5px
      background #ccc
      transition transform 0.1s ease
    // #toggle-menu span:nth-last-child(3)
    //   transform-origin 50% 50%
  div 
    overflow hidden
  input 
    width 100%  
// Mobile.
@media screen and (max-width 600px)
  .top-nav
    #toggle-menu
      display block
      &.cross span
        &:nth-last-child(3)
          transform rotate(45deg) translate(6px, 6px)
        &:nth-last-child(2)
          opacity 0
        &:nth-last-child(1)
          transform rotate(-45deg) translate(6px, -5px)
    #menu
      position absolute
      top 60px
      right -70px
      & > li
        display block
      &.show
        transform translate(-80px)











