#desktop-nav
  display block
  min-width 600px
  background $BLACK_COLOR
  font-size 1.1em
  height 2.5em
  padding-top .2em
  // div 
  //   overflow hidden
  input 
    width 100%  
  a.brand 
    float left
    color #ccc
    text-decoration none
    margin .5em 2em .1em 1em
    cursor pointer
    &:hover
      color #fff
  a.cart
    float right
    margin .35em 1em 0 1em
    text-decoration none
    cursor pointer
    .icon
      width 2.2em
      height 2.2em   
      position relative
      top -.25em
    #cart-qtd
      position relative
      top -1.5em
      left -1.48em
      font-size .9em
      font-weight bold
      color green
  #menu
    float right
    > ul
      background $BLACK_COLOR
      > li
        position relative
        line-height 2.2em
        display inline-block
        color #ccc
        height 2.5em
        // white-space nowrap
        cursor pointer
        .title
          padding 0 1em
        .icon
          width 1.2em
          height 1.2em   
          vertical-align middle
        > ul
          cursor default
          position absolute
          left 0
          top 2.5em
          display none
          background $BLACK_COLOR
          border-radius 0 0 3px 3px
          box-shadow 0px 0px 8px 2px rgba(0, 0, 0, 0.50)
          transition transform 0.2s ease
          > li 
            cursor pointer
            // font-size .9em
            // line-height normal
            // white-space nowrap
            display block
            line-height 1.7em
            padding .4em 1em .4em 1em
            list-style none
            min-width 7em
            &:hover
              color #f1f1f1
      // li:hover
      //   background #444
      > li:hover > ul 
        display block
        // color #f1f1f1
  .search
    // The trick used to be width 100% inside a block.
    display flex
    padding-top .35em
    input:first-child
      height 2em
      min-width 60px
      border none
      border-radius 2px 0 0 2px
      padding-left .5em
    input:last-child
      height 2em
      width 2.2em
      margin-right 2em
      border none
      border-radius 0 2px 2px 0
      background-image url('/icon/ic_search_black_24px.svg')
      // background-image url('/icon/sprite.svg#ic_search_black_24px')
      // background-size 8px 8px;
      // background-position 0 0;
      background-repeat no-repeat
      background-color white
      background-size 1.8em 1.8em
      background-position 65% 50%  
    input:last-child:hover
      background-color lightgray
      cursor pointer
// Mobile.
@media screen and (max-width 600px)
  #desktop-nav
    display none
          
 