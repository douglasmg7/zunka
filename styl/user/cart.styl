section {
    background-color: var(--white-lighter);
    // max-width: var(--width-small);
    // min-width: 14em;
    padding 1em;
    margin 2em 1em;
}
.title {
    margin-top: 0;
    margin-bottom: 1em;
}
main .cart {
    display: flex;
    flex-flow: column wrap;
    justify-content: space-between;
}
.product {
    display: flex;
    padding: 1em 0;
    border-bottom: 1px solid var(--white);
}
.product:last-of-type {
    // border: none;
    border: none;
}
.product img {
    padding: 0 1em 1em .5em;
    width: 100px;
    height: auto;
}
.product-info {
    padding-left: 1em;
}
.product-title {
    font-size: 1.2em;
    color: var(--blue-light);
    display: block;
    text-decoration: none;
}
.product-quantity {
    width: 3em;
    margin-top: .3em;
}
.product-quantity a {
    cursor: pointer;
    font-size: .9em;
}
.product-price {
    font-size: 1.2em;
    color: var(--green);
    white-space: nowrap;
    margin: 0 1em 0 0;
}
main .cart .subtotal span {
    font-weight: 500;
}
main .cart .subtotal span:last-of-type {
    white-space: nowrap;
    color: var(--green);
}
main .cart .subtotal input {
    width: 100%;
}
main .cart .info {
    margin-bottom: 0;
    font-weight: 400;
}
main .cart .info :last-of-type {
    margin-top: 0;
}
.modal {
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.8); /* Black w/ opacity */
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    padding: 1em;
    box-sizing: border-box;
}
.modal-content {
    background-color: #fefefe;
    margin: 10% auto;
    padding: 1em;
    border-radius: 4px;
    display: flex;
    flex-flow: column nowrap;
    align-items: flex-start;
}
.modal-content p {
    margin: 0;
}
.modal-content h3 {
    margin-top: 1em;
    margin-bottom: 0;
}
.modal-content img.product {
    max-width: 100px;
    height: auto;
}
.modal-content .title {
    color: var(--blue-light);
}
