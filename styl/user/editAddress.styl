section {
    background-color: var(--white-lighter);
    max-width: var(--width-small);
    min-width: 14em;
    padding 1em;
    margin 2em 1em;
}
.title {
    margin-top: 0;
}
section a {
    display: block;
}
p.loading-cep, p.cep-not-found {
    margin-bottom: 0;
    margin-top: 0;
}
p.cep-not-found {
    color: var(--red);
}
p.loading-cep {
    color: var(--green);
}
