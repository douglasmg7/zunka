@import '../reset'
@import '../topMenu'
main
  display flex
  flex-flow column nowrap
  justify-content center
  margin 2em auto
  width 95%
  max-width 480px
  a
    text-decoration none
  > .auth
    display flex
    flex-flow column nowrap
    margin 1em 0
    padding-bottom 1em
    border 1px solid $lightGray
    border-radius 4px  
    > p, > a
      margin .8em .8em 0 .8em
    > p.title
      font-weight bold
    > hr
      border-top 1px solid $lightGray
      margin-top .8em
    > h2
      margin-bottom .8em
    > a
      color green
    > label
      margin-top 1em
  > input
    margin .2em 0 0 0
    padding-left .5em
    border-radius .2em
    border solid 1px #aaa
    height 2em
    &[type='button']
      margin-top 1em
      color #fff
      background-color #337ab7
      border-color #2e6da4
      &:hover
        background-color #286090
        border-color #204d74
    
    