@import '../reset'
@import '../main-nav'
@import '../pagination'
main
  display flex
  flex-flow column nowrap
  justify-content center
  margin 1em auto
  max-width 1000px
.breadlink
  a
    text-decoration none
table
  margin-top .5em
  border-bottom solid 1px lightgray
  border-spacing 0
  width 100%
  text-align left
td
  border-top solid 1px lightgray
th, td
  padding .3em .2em .3em .5em
