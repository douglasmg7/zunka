@import '../reset'
@import '../main-nav'
main
  display flex
  flex-flow column nowrap
  justify-content center
  // margin 2em 4em
  margin 2em auto
  width 95%
  max-width 400px
& > .login
  // background-color red
  display flex
  flex-flow column
  padding 1em
  border 1px solid lightgray
  border-radius 4px  
  hr
    margin .5em 0 .5em 0
  p.warn-message
    color red
    margin-bottom .5em
  p.success-message
    color green
  input
  button
    height 2em
    border 1px solid lightgray
    margin-bottom 1em
    padding-left 1em
    padding-right 1em
    border-radius 4px
  input.signup
    color #fff
    background-color #337ab7
    border-color #2e6da4
    &:hover
      background-color #286090
      border-color #204d74
  p  
    margin-top .2em