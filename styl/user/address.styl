@import '../menu/reset_menu'
@import '../input'
@import '../message'
btn-primary()
.panel
  margin-bottom 4em
  > .addresses
    flex 1 1 auto
    display flex
    flex-flow column wrap
    justify-content space-between
    > .address-panel
      display flex
      flex-flow column nowrap
      border 1px solid b_ineer_panel
      border-radius 4px
      min-height 300px
      min-width 450px
      margin-bottom 1em
      > .address-header
        background-color bgc_body
        h3
          margin .5em 0
          padding-left .8em
        hr
          margin 0
      > .address-body, 
      > .address-footer
        padding .8em
      > .address-body 
        :first-child
          font-weight bold
          margin-top 0
      > .address-footer
        color green
        a:hover
          cursor pointer