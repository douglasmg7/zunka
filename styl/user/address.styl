@import '../reset'
@import '../main-nav'
main
  display flex
  flex-flow column nowrap
  justify-content center
  // margin 2em 4em
  margin 2em auto
  width 95%
  max-width 1200px
& > .breadlink
  margin-left 1em
  a
    text-decoration none
& > .title
  margin 1em
& > .addresses
  display flex
  flex-flow row wrap
  justify-content space-between
  border-radius 4px  
  .address-panel
    border 1px solid lightgray
    border-radius 5px
    min-height 200px
    width: 350px
    margin 1em
  & .add
    display flex
    flex row nowrap
    justify-content center
    align-items center
    border 2px dashed lightgray
    a
      text-decoration none
      color black
  .address-heading, 
  .address-body, 
  .address-footer
    padding 1em
  .address-heading
    height 3.5em
    border-bottom 1px solid lightgray
    border-top-left-radius 5px
    border-top-right-radius 5px      
  .address-body > p.name
    font-weight bold
