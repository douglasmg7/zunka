$RED_PRICE = #C45D43
$GRAY_TITLE = #7D7D7D
$veryLightGray = #eee
$lightGray = #ccc
[v-cloak]
  display none
html, body, div, form, ul, li, p, h1, h2, h3, h4, hr
  margin 0
  padding 0
  font-weight 500
  // line-height: 1.1;
h1, h2, h3, h4, h5
  margin 0
hr
  // height: 0;
  margin-top 1.5em
  border 0
  border-top 1px solid #eee
body
  // font-family: 'Helvetica Neue','Helvetica', 'Arial', 'sans-serif'
  // font-family: 'Arial'
  font-family:
      '-apple-system', 'BlinkMacSystemFont',
      'Segoe UI', 'Roboto', 'Oxygen',
      'Ubuntu', 'Cantarell', 'Fira Sans',
      'Droid Sans', 'Helvetica Neue', 'sans-serif'
  .container
    width 95%
    margin 0 auto
button
input
  box-sizing border-box
  padding-left .5em
  border-radius .2em
  border solid 1px #aaa
  height 2em
  &[type='button']
    color #fff
    margin-top 1em
    &.green
      background-color #5cb85c
      border-color #4cae4c
      &:hover
        background-color #449d44
        border-color #398439
    &.blue
      background-color #337ab7
      border-color #2e6da4
      &:hover
        background-color #286090
        border-color #204d74  