:root {
    /* Colors */
    --black-darker: #333;
    --black-dark: #555;
    --black: #777;
    --white-lighter: #fff;
    --white-light: #f5f5f5;
    --white: #eee;
    --white-dark: #dbdbdb;
    --green-lighter: #23d160;
    --green-light: #22c65b;
    --green: #070;
    --green-dark: #050;
    --green-darker: #030;
    --gray: #666;
    --red: #dd0000
    /* Menu */
    --menu-width: 300;
    /* Widths */
    --width-small: 22em;
}
[v-cloak] {
    display: none;
}
html, body, div, form, ul, li {
    margin: 0;
    padding: 0;
    font-weight: 400;
}
html {
  font-size: 62.5%;
}
body {
    font-size: 1.6em;
    line-height: 1.6;
    color: var(--black-darker);
}
h1, h2, h3, h4, h5, h6, p, hr {
    padding: 0;
    font-weight: 400;
}
h1 {
    font-size: 2em;
    // margin: .67em 0 0 0;
    margin: 1em 0 0 0;
}
h2 {
    font-size: 1.5em;
    // margin: .75em 0 0 0;
    margin: 1em 0 0 0;
}
h3 {
    font-size: 1.17em;
    // margin: .83em 0 0 0;
    margin: 1em 0 0 0;
}
h4, p {
    font-size: 1em;
    margin: 1em 0 0 0;
}
h5 {
    font-size: .83em;
    // margin: 1.5em 0 0 0;
    margin: 1em 0 0 0;
}
h6 {
    font-size: .75em;
    // margin: 1.67em 0 0 0;
    margin: 1em 0 0 0;
}
hr {
    border: 0;
    border-top: 1px solid #e1e1e1;
}
label {
    display: block;
    margin-top: 1em;
}
a {
    display: inline-block;
    color: #337ab7;
    text-decoration: none;
}
a:hover {
    color: #23527c;
}
.alert {
    font-style: italic;
    background-color: #ccc;
    padding: .4em 1em;
    margin: 0;
    border-radius: 4px;
}
// Input.
input,
textarea {
    font-size: 1em;
    box-sizing: border-box;
    // width: 100%;
    height: 2em;
    border: 1px solid var(--black);
    padding-left: .5em;
    padding-right: .5em;
    border-radius: 4px;
}
input:not([readonly]):focus,
textarea:not([readonly]):focus {
    border: 1px solid rgba(81, 203, 238, 1);
}
input:[readonly],
textarea:[readonly] {
    background-color: lightgray;
}
textarea {
    height: 10em;
}
input[type='submit'],
input[type='button'] {
    cursor: pointer;
}
input[type='checkbox'] {
    width: 1em;
    height: 1em;
    margin: 0 .4em 0 0;
}
// Primary.
input[type='submit'].btn-primary,
input[type='button'].btn-primary,
a.btn-primary {
    color: var(--white-lighter);
    background-color: #008800;
    border-color: #007a00;
}
input[type='submit'].btn-primary:hover,
input[type='button'].btn-primary:hover,
a.btn-primary:hover {
    color: var(--white-lighter);
    background-color:  #006d00;
    border-color: #006200;;
}
// Secondary.
input[type='submit'].btn-secondary,
input[type='button'].btn-secondary {
    color: var(--white-lighter);
    background-color: #00c000;
    border-color: #00ad00;
}
input[type='submit'].btn-secondary:hover,
input[type='button'].btn-secondary:hover {
    background-color: #009a00;
    border-color: #008b00;
}
// Success.
input[type='submit'].btn-success,
input[type='button'].btn-success {
    color: var(--white-lighter);
    background-color: #218838;
    border-color: #1e7a32;
}
input[type='submit'].btn-success:hover,
input[type='button'].btn-success:hover {
    background-color: #1a6d2d;
    border-color: #176229;
}
// Danger.
input[type='submit'].btn-danger,
input[type='button'].btn-danger {
    color: var(--white-lighter);
    background-color: #c82333;
    border-color #b4202e;
}
input[type='submit'].btn-danger:hover,
input[type='button'].btn-danger:hover {
    background-color: #a01c29;
    border-color: #901925;
}
// Warn.
input[type='submit'].btn-warn,
input[type='button'].btn-warn {
    color: var(--white-lighter);
    background-color: #e0a800;
    border-color: #ca9700;
}
input[type='submit'].btn-warn:hover,
input[type='button'].btn-warn:hover {
    background-color: #b38600;
    border-color: #a17900;
}
// Info.
input[type='submit'].btn-info,
input[type='button'].btn-info {
    color: var(--white-lighter);
    background-color: #138496;
    border-color: #117787;
}
input[type='submit'].btn-info:hover,
input[type='button'].btn-info:hover {
    background-color: #0f6a78;
    border-color: #0e5f6c;
}
// Exit.
input[type='submit'].btn-exit,
input[type='button'].btn-exit {
    color: var(--white-lighter);
    background-color: #138496;
    border-color: #117787;
}
input[type='submit'].btn-exit:hover,
input[type='button'].btn-exit:hover {
    background-color: #0f6a78;
    border-color: #0e5f6c;
}
.button,
button,
input[type='button'],
input[type='reset'],
input[type='submit'] {
  cursor: pointer;
  display: inline-block;
  font-weight: 400;
  font-size: 1em;
  line-height: 1em;
  /* letter-spacing: .05em; */
  text-align: center;
  text-decoration: none;
  white-space: nowrap;
}
.button[disabled],
button[disabled],
input[type='button'][disabled],
input[type='reset'][disabled],
input[type='submit'][disabled] {
  cursor: default;
  opacity: .5;
}
.button[disabled]:focus, .button[disabled]:hover,
button[disabled]:focus,
button[disabled]:hover,
input[type='button'][disabled]:focus,
input[type='button'][disabled]:hover,
input[type='reset'][disabled]:focus,
input[type='reset'][disabled]:hover,
input[type='submit'][disabled]:focus,
input[type='submit'][disabled]:hover {
  background-color: #9b4dca;
  border-color: #9b4dca;
}

input[type='email'],
input[type='number'],
input[type='password'],
input[type='search'],
input[type='tel'],
input[type='text'],
input[type='url'],
textarea,
select {
  -webkit-appearance: none;
     -moz-appearance: none;
          appearance: none;
  background-color: transparent;
  border: 1px solid #d1d1d1;
  width: 100%;
}
input[type='email']:focus,
input[type='number']:focus,
input[type='password']:focus,
input[type='search']:focus,
input[type='tel']:focus,
input[type='text']:focus,
input[type='url']:focus,
textarea:focus,
select:focus {
  border-color: #9b4dca;
  outline: 0;
}
// Table.
th,
td {
  padding: 12px 15px;
  text-align: left;
  border-bottom: 1px solid #E1E1E1; }
th:first-child,
td:first-child {
  padding-left: 0; }
th:last-child,
td:last-child {
  padding-right: 0; }
// Space.
button,
.button {
  margin-bottom: 1em;
}
input,
textarea,
select,
fieldset {
  // margin-bottom: 1em;
}
pre,
blockquote,
dl,
figure,
table,
p,
ul,
ol,
form {
  // margin-bottom: 2.5em;
}
.warn-message {
    color: var(--red);
    margin: 0;
}
.success-message {
    color: var(--green);
    margin-bottom: 0;
}
