@import 'reset'
@import 'main-nav'
main
  display flex
  flex-flow column nowrap
  justify-content center
  // margin 2em 4em
  margin 2em auto
  max-width 1000px
& > .product
  // background-color red
  display flex
  flex-flow row wrap
  justify-content space-between
  margin 0 1em
  .image
    flex 1 1 40%
    img
      display block
      margin 0 auto 2em auto
    .thumbnail
      // background-color blue
      display flex
      flex-flow row wrap
      // justify-content space-around
      img
        margin .3em
        max-width 80px
  .info
    flex 1 1 58%
    .product-detail
      padding-top: 1em
      padding-left: 1em
    button
      margin-top: 1em
    .estimate-ship
      margin-top: 2em;
      & > p 
        font-weight: bold
      table
        display none
        margin-top 1em
        border-radius 4px
        background-color #F3F3F3
        th
          padding .5em 1em 0 1em
        td
          padding .5em 1em .5em 1em
      .cep-error-msg
        margin-top .5em
        color red      
& > .description
  // background-color lightblue
& > .infos
  display flex
  flex-flow row wrap
  table td:nth-child(1)
    background-color: #F3F3F3
  .info-tech
  .info-add
    flex 0 0 50%
h5.title
  color green
  font-weight bold
