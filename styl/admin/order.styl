section {
    background-color: var(--white-lighter);
    max-width: var(--width-large);
    min-width: var(--width-small);
    padding 1em;
    margin 2em 1em;
}
.title {
    margin-top: 0;
}
section h2 {
    color: var(--green);
    margin: .5em 0 .3em 0;
    // font-size: 1.5em;
    // padding: 0;
    // font-weight: 400;
}
section h3 {
    margin: 1em 0 0 0;
    color: var(--black-darkest);
    text-transform: lowercase;
    // font-size: 1.17em;
}
section h3::first-letter {
    text-transform: uppercase;
}
section a {
    display: block;
    margin: 0;
}
section p {
    margin: 0;
    color: var(--black-dark);
    // font-size: 1em;
    // padding: 0;
    // font-weight: 400;
}
section ul {
    margin-left: 1em;
}
