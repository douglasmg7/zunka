section {
	background-color: var(--white-lighter);
	padding: 1em;
	margin: 2em 1em;
}
.title {
    margin-top: 0;
}
table {
    border-bottom: solid 1px lightgray;
    border-spacing: 0;
    width: 100%;
    text-align: left;
}
thead th, thead td, tbody th, tbody td {
    padding: .3em .5em;
}
th {
    font-size: .6em;
}
tr {
    border: solid 3px lightgray;
}
th.dealer, th.location, td.dealer, td.location {
    display: none;
}
tr:first-child {
    border-left: solid 1px lightgray;
}
tr:last-child {
    border-right: solid 1px lightgray;
}
tr.product-commercialize {
    background-color: #F2DEDE;
}
tr.product-commercialize.product-active {
    background-color: #bdffbd;
}
td {
    font-size: .6em;
    border-top: solid 1px lightgray;
    cursor: pointer;
}
td a {
    text-decoration: none;
    color: black;
}
