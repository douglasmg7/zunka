section {
	background-color: var(--white-lighter);
	padding: 1em;
	margin: 2em 1em;
}
.title {
    margin-top: 0;
}
.search-order {
    flex-grow: 1;
    flex-shrink: 1;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 2em;
    padding-right: .5em;
    margin-top: 1em;
    border: 1px solid var(--black-lighter);
    border-radius: 4px;
}
.search-order input {
    flex-grow: 1;
    flex-shrink: 1;
    border: none;
    height: 100%;
    width: 10em;
}
.search-order i {
    color: var(--black);
    cursor: pointer;
}
.filters {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    background-color: var(--black-lighter);
    margin-top: 1em;
    border-radius: 4px;
}
.filters input[type="checkbox"] {
    margin-right: .2em;
    // margin-left: 1em;
}
.filters label {
    margin: 0 1em 0 0;
}
.filters label:last-child {
    margin-right: 0;
}
.filter {
    display: flex;
    align-items: center;
    padding: .2em .5em;
}
// Mobile.
@media (min-width: 600px){
    .filters {
        flex-direction: row;
        align-items: flex-start;
    }
}
.orders {
	flex: 1 1 auto;
    display: flex;
    flex-flow: column wrap;
    justify-content: space-between;
}
.order {
    display: flex;
    flex-flow: column nowrap;
    border-radius: 4px;
    margin-top: 1em;
    color: var(--black-darker);
}
.order.placed,
.order.paid {
    background-color: var(--yellow-light)
    padding-left: .3em;
}
.order.shipped {
    background-color: var(--green-lighter)
    padding-left: .3em;
}
.order.delivered {
    color: var(--green);
}
.order.canceled {
    color: var(--red);
}
a.order {
    color: unset;
    cursor: pointer;
}
a.order:hover {
    text-decoration: underline;
}
