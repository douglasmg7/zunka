@import '../menu/reset_menu'
@import '../menu/pagination'
#app
  display flex
  flex-flow column nowrap
  margin 1em auto
  width 95%
  // > .breadlink
  //   a
  //     text-decoration none
  > header
    // background-color lightyellow
    margin-bottom 1em
    display flex
    flex-flow row wrap
    justify-content space-between
    align-items flex-end
    h2
      margin .5em 0 0 0
    .search-order
      button
        margin-left .5em
        // height 2em
  > .filter
    background-color $veryLightGray
    display flex
    align-items center
    input
      margin 0 .4em
      height 2em
      &:first-child
       margin-left .8em
    label
      margin-right 1em        
  > table
    margin-top 1em
    border-bottom solid 1px lightgray
    border-spacing 0
    width 100%
    text-align left
    td
      border-top solid 1px lightgray
    th, td
      padding .3em .2em .3em .5em
    // th.clickable, td.clickable
    td
      cursor pointer
      a
        text-decoration none
        color black
    tr.product-commercialize
      background-color #F2DEDE
    tr.product-commercialize.product-active
      background-color #bdffbd
  > .modal
    position fixed /* Stay in place */
    z-index 1
    // z-index 1 /* Sit on top */
    left 0
    top 0
    width 100% /* Full width */
    height 100% /* Full height */
    overflow auto /* Enable scroll if needed */
    background-color rgb(0,0,0) /* Fallback color */
    background-color rgba(0,0,0,0.4) /* Black w/ opacity */ 
    display flex
    flex-flow column nowrap
    align-items center
    > .modal-content
      background-color #fefefe
      margin 10% auto
      padding 1em
      border-radius .1em
      display flex
      flex-flow column nowrap
      justify-content flex-start
      min-width 400px
      // justify-content center
      // max-width 600px
      .price
        color $RED_PRICE
      .quantity
        color $GRAY_TITLE
      .title
        font-weight bold
        margin-top .5em
      .deadline
        font-weight bold
      .items
        ul
          margin-left 2em
          li
            color $GRAY_TITLE
          margin-top .5em
          p
            margin-top .2em
            color black
        button
          margin-top 2em
      .total
        margin-top .5em
      .change-status
        margin-bottom 2em
        button
          margin .4em 1em .2em 0
      .close-modal
        display flex
        justify-content flex-end
  & > .set-status
    position fixed /* Stay in place */
    z-index 2
    left 0
    top 0
    width 100% /* Full width */
    height 100% /* Full height */
    overflow auto /* Enable scroll if needed */
    background-color rgb(0,0,0) /* Fallback color */
    background-color rgba(0,0,0,0.4) /* Black w/ opacity */ 
    display flex
    flex-flow column nowrap
    align-items center
    & > .content
      border solid 1px black
      background-color #fefefe
      margin 30% auto
      border-radius .1em
      display flex
      flex-flow column nowrap
      justify-content flex-start
      min-width 100px
      & > .message
        padding 1em
      & > .options
        display flex
        align-items flex-start
        padding 0 1em 1em 1em
        input[type='checkbox']
          height: auto
      & > .buttons
        display flex
        justify-content center
        background-color #f4f4f4
        padding 1em
        & > button
          margin-left 1em
          min-width 6em

