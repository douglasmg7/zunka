}
.modal {
    display: flex;
    flex-flow: column nowrap;
	position: fixed;
	z-index: 1;
	left: 0;
	top: 0;
	width: 100% /* Full width */;
	height: 100% /* Full height */;
	overflow: auto /* Enable scroll if needed */;
	background-color: #000 /* Fallback color */;
	background-color: rgba(0,0,0,0.7) /* Black w/ opacity */;
}
.modal .panel {
	margin: 1em auto;
    border-radius: 4px;
    background-color: var(--white-lighter);
    padding: 1em;
}
.modal .sub-title {
    margin-top: 0;
    font-weight: 500;
}
.modal .panel .item {
    margin-bottom: 1em;
}
.modal .item p {
    margin-top: 0;
}
.modal ul {
    list-style: disc inside none;
}
.modal input {
    margin: 0;
}
.modal .change-status {
    background-color: var(--white-light);
    border: 1px solid var(--black-lighter);
    padding: 1em;
    border-radius: 4px;
}
.modal .change-status input {
    margin-top: 1em;
}
.set-status {
    position: fixed; /* Stay in place */
    z-index: 2;
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
}
.set-status .panel {
    margin: 30% auto;
    min-width: 100px;
    border-radius: 4px;
    background-color: var(--white-lighter);
    padding: 1em;
}
.set-status .item {
    border-radius: 4px;
    // padding: 1em;
    margin-bottom: 1em;
}
.set-status  .item:first-child {
    margin-top: 0;
}
.set-status .item:last-child {
    margin-bottom: 0;
}
.set-status .item .options {
    display: flex;
    align-items: center;
}
.set-status .item .options label {
    margin: 0 1em 0 0;
}
.set-status .buttons {
    display: flex;
    justify-content: space-between;
}
.set-status .buttons input {
    flex: 0 1 48%;
    margin-top: 0;
}
