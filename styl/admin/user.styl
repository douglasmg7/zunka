section {
    background-color: var(--white-lighter);
    max-width: var(--width-large);
    min-width: var(--width-small);
    padding 1em;
    margin 2em 1em;
}
.title {
    margin-top: 0;
}
section h2 {
    color: var(--green);
    margin: .5em 0 .3em 0;
    // font-size: 1.5em;
    // padding: 0;
    // font-weight: 400;
}
section h3 {
    margin: 0;
    color: var(--black-darkest);
    // font-size: 1.17em;
}
section a {
    display: block;
    margin: 0 0 .7em 0;
}
section p {
    margin: 0 0 .7em 0;
    // margin: 0 0 0 0;
    color: var(--black-dark);
    // font-size: 1em;
    // padding: 0;
    // font-weight: 400;
}
section a.order p {
}
section a.order p.delivered,
section a.order p.shipped {
    color: var(--green-dark);
}
section a.order p.placed,
section a.order p.paid {
    color: var(--black-darkest);
    background-color: var(--yellow-light);
    padding-left: .5em;
}
section a.order p.canceled {
    color: var(--red);
}
