section {
	background-color: var(--white-lighter);
	width: 800px;
	padding: 0 1em 1em 1em;
	margin: 1em;
}
.title {
    margin-top: 0;
}
section p {
    margin-top: 0;
    opacity: .7;
}
section li {
    // list-style: disc inside none;
    margin-left: 1em;
}
section hr {
    margin-top: 2em;
}
/* Mobile. */
@media (min-width: 0px) {
	section {
		width: 400px;
	}
}
/* Tablet. */
@media (min-width: 600px) {
	section {
		width: 500px;
	}
}
/* Small laptop. */
@media (min-width: 800px){
	section {
		width: 700px;
	}
}
