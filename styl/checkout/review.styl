@media (min-width: 800px){
	section {
        min-width: 600px;
		// padding-right: 1.5em;
		// padding-left: 1.5em;
		// padding-bottom: 1.5em;
	}
    .rows {
		grid-template-columns: 50% 50%;
		grid-template-areas: "col-1 col-2";
		margin-top: 1em;
    }
	.col-1 {
		padding-right: 1.5em;
	}
	.col-2 {
		padding-left: 1.5em;
		border-left: 1px solid var(--black-lighter);
	}
    .address .sub-title, 
    .items .sub-title {
        margin-top: 0;
    }
}
