section {
	background-color: var(--white-lighter);
	padding: 1em;
	margin: 2em 1em;
}
.rows {
    background-color: var(--white-lighter);
    display: grid;
    grid-template-rows: auto;
}
.title {
    margin-top: 0;
}
section p {
    margin-top: 0;
    opacity: .7;
}
section li {
    // list-style: disc inside none;
    margin-left: 1em;
}
section hr {
    margin-top: 2em;
}
@media (min-width: 0px) {
    .rows {
		grid-template-columns: auto;
		grid-template-areas: "col-1" "col-2";
    }
    .col-1 {
        grid-area: col-1;
    }
    .col-2 {
        grid-area: col-2;
    }
	.sub-title {
		margin-top: 1em;
	}
}
