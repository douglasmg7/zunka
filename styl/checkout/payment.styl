@import '../menu/reset_menu_footer'
@import '../input'
@import '../message'
btn-primary()
btn-info()
.panel
  max-width max_width_address
  padding 0
  overflow auto   // So inner element have the margin respected.
  p
  span
    color c_gray
    margin-bottom .5em
  .title
    margin-left 1em
  .price
    color c_price
  .quantity
    color $c_quantity
  h3
    margin-bottom 0
  hr
    margin 1em
    margin-top 2em
  .row
    display flex
    flex-flow row wrap
  //   justify-content space-between
  .column
    margin 0 1em 
  .address
  .shipment
  .items
  .total
    // margin-top 2em
    p
    ul
      margin .4em 0 .4em 0
  .shipment
    span.deadline
      color c_black
      font-weight bold
    p
      text-transform capitalize
  .items
    ul
      margin-left 1em
      margin-bottom 2em
      li
        color $c_quantity
      p
        margin-top .2em
        color black
  .total
    margin-top .5em
  .payment
    display flex
    flex-flow column nowrap
    align-items center
    margin 0 1em 1em 1em
    input
      margin-bottom 1em
      max-width 250px
      height: 35px
      font-style: italic;
      font-weight: 500
