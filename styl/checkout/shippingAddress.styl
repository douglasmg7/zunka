@require '../misc/loading.styl';

.title {
    margin-top: 0;
}
.address {
    border: 1px solid var(--black-lighter);
    border-radius: 4px;
    margin-top: 1em;
    padding: 1em;
}
.address .title {
    margin-top: 0;
    margin-bottom: .5em;
}
.address p {
    margin-top: 0;
    opacity: .8;
}
p.validation,
p.cep-not-found,
label.error {
    color: var(--red);
    margin-top: 0;
}
p.loading-cep {
    margin-top: 0;
}
