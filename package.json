{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "./bin/compile_styl",
    "start": "pm2 start --env production",
    "restart": "pm2 restart zunka_server",
    "stop": "pm2 delete zunka_server",
    "start_t": "NODE_ENV=production DB=production ./bin/www",
    "dev": "NODE_ENV=development nodemon ./bin/www",
    "insertMakers": "DB=production bin/insertProductMakers.js",
    "insertCategories": "DB=production bin/insertProductCategories.js",
    "icon": "./node_modules/svg-sprite/bin/svg-sprite.js --symbol --symbol-dest='' --symbol-sprite='dist/icon/sprite.svg' dist/icon/*.svg",
    "export-db": "mongodump --db zunka -u admin --authenticationDatabase admin --gzip --archive=./dump/$(date +\"%Y-%h-%d@%T\").gz",
    "export-db-old": "mongodump --db zunka -u admin --authenticationDatabase admin --out ./dump/$(date +\"%Y-%h-%d@%T\")",
    "install-certbot-service": "sudo ./bin/install-certbot-service",
    "start-mlab": "NODE_ENV=production DB=mlab nodemon ./bin/www",
    "test": "mocha test -u bdd -R spec -t 2000",
    "testCompile": "mocha test -u bdd --compilers js:babel-core/register",
    "createResizedImgs": "./bin/createResizedImgs.js",
    "removeResizedImgs": "./bin/removeResizedImgs.js"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "chai-http": "^4.3.0",
    "cheerio": "^1.0.0-rc.3",
    "colors": "^1.3.3",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.4.1",
    "cookie-parser": "^1.4.4",
    "csurf": "^1.10.0",
    "debug": "^3.2.6",
    "express": "^4.17.0",
    "express-middleware-rollup": "^2.0.0",
    "express-session": "^1.16.1",
    "express-validator": "^5.3.1",
    "formidable": "^1.2.1",
    "fs-extra": "6.x",
    "gerador-validador-cpf": "^3.1.3",
    "livereload": "^0.7.0",
    "mongodb": "^3.2.5",
    "mongoose": "^5.5.9",
    "morgan": "^1.9.1",
    "nodemailer": "^4.7.0",
    "nodemon": "^1.19.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.3",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "serve-favicon": "^2.5.0",
    "sharp": "^0.21.3",
    "soap": "^0.24.0",
    "svg-sprite": "^1.5.0",
    "winston": "^3.2.1",
    "yargs": "^11.1.0"
  },
  "devDependencies": {
    "stylus": "^0.54.5"
  }
}
