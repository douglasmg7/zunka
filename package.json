{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "pm2 start --env production",
    "restart": "pm2 restart zunka_server",
    "stop": "pm2 delete zunka_server",
    "start_t": "NODE_ENV=production DB=production ./bin/www",
    "start_tl": "NODE_ENV=production DB=production PORT=3080 PORT_SSL=3088 ./bin/www",
    "dev": "NODE_ENV=development PORT=3080 PORT_SSL=3088 nodemon ./bin/www",
    "start-mlab": "NODE_ENV=production DB=mlab PORT=3080 PORT_SSL=3088 nodemon ./bin/www",
    "test": "mocha test -u bdd -R spec -t 2000",
    "testCompile": "mocha test -u bdd --compilers js:babel-core/register",
    "insertMakers": "DB=production bin/insertProductMakers.js",
    "insertCategories": "DB=production bin/insertProductCategories.js",
    "icon": "./node_modules/svg-sprite/bin/svg-sprite.js --symbol --symbol-dest='' --symbol-sprite='dist/icon/sprite.svg' dist/icon/*.svg"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "chai-http": "^4.0.0",
    "cheerio": "^1.0.0-rc.2",
    "colors": "^1.3.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.3.3",
    "cookie-parser": "~1.4.3",
    "csurf": "^1.9.0",
    "debug": "3.x",
    "express": "^4.16.3",
    "express-middleware-rollup": "^2.0.0",
    "express-session": "^1.15.6",
    "express-validator": "5.x",
    "formidable": "^1.2.1",
    "fs-extra": "6.x",
    "gerador-validador-cpf": "^3.1.2",
    "livereload": "^0.7.0",
    "mongodb": "^3.1.1",
    "mongoose": "^5.1.6",
    "morgan": "^1.9.0",
    "nodemailer": "^4.6.7",
    "nodemon": "^1.17.5",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.3",
    "redis": "^2.8.0",
    "request": "^2.87.0",
    "serve-favicon": "^2.5.0",
    "soap": "^0.24.0",
    "svg-sprite": "^1.4.0",
