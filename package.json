{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "update": "./bin/update-and-restart-systems.sh",
    "build": "./bin/compile_styl",
    "start": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 delete ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js --env production",
    "start_t": "NODE_ENV=production DB=production ./bin/www",
    "dev": "NODE_ENV=development nodemon ./bin/www",
    "icon": "./node_modules/svg-sprite/bin/svg-sprite.js --symbol --symbol-dest='' --symbol-sprite='dist/icon/sprite.svg' dist/icon/*.svg",
    "download-backup": "bin/download-backup.sh",
    "create-backup": "bin/create-backup.sh",
    "export-db": "mongodump --db zunka -u admin --authenticationDatabase admin --gzip --archive=./dump/$(date +\"%Y-%h-%d@%T\").gz",
    "export-db-old": "mongodump --db zunka -u admin --authenticationDatabase admin --out ./dump/$(date +\"%Y-%h-%d@%T\")",
    "install-certbot-service": "sudo ./bin/install-certbot-service",
    "start-mlab": "NODE_ENV=production DB=mlab nodemon ./bin/www",
    "test": "mocha test -u bdd -R spec -t 2000",
    "testCompile": "mocha test -u bdd --compilers js:babel-core/register",
    "createResizedImgs": "./bin/createResizedImgs.js",
    "removeResizedImgs": "./bin/removeResizedImgs.js"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "chai-http": "^4.3.0",
    "cheerio": "^1.0.0-rc.3",
    "colors": "^1.3.3",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.4.2",
    "cookie-parser": "^1.4.4",
    "csurf": "^1.10.0",
    "debug": "^3.2.6",
    "express": "^4.17.1",
    "express-middleware-rollup": "^2.0.0",
    "express-session": "^1.16.2",
    "express-validator": "^5.3.1",
    "formidable": "^1.2.1",
    "fs-extra": "6.x",
    "gerador-validador-cpf": "^3.1.3",
    "livereload": "^0.8.0",
    "marked": "^0.7.0",
    "moment-timezone": "^0.5.27",
    "mongodb": "^3.3.2",
    "mongoose": "^5.7.0",
    "morgan": "^1.9.1",
    "nodemailer": "^4.7.0",
    "nodemon": "^1.19.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.4",
    "qs": "^6.8.0",
    "querystring": "^0.2.0",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "saslprep": "^1.0.3",
    "serve-favicon": "^2.5.0",
    "sharp": "^0.21.3",
    "soap": "^0.24.0",
    "svg-sprite": "^1.5.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "stylus": "^0.54.7"
  }
}
